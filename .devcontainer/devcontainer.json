{
  "name": "Odoo Dev Container",
  "image": "odoo:17.0",
  "service": "odoo",
  "workspaceFolder": "/mnt/extra-addons",
  "remoteUser": "root",
  "containerEnv": {
    "HOST": "db",
    "USER": "odoo",
    "PASSWORD": "odoo"
  },
  // "forwardPorts": [8069],
  "runArgs": [ "--network=my-custom-odoo-network" ],
  "portsAttributes": {
    "8069": {
      "label": "Odoo",
      "onAutoForward": "notify"
    }
  }
}
